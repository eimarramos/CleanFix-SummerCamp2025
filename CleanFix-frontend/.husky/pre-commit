#!/bin/sh
# Verificar si estamos en el directorio correcto
if [ -f "package.json" ] && [ -f "angular.json" ]; then
  # Estamos en CleanFix-frontend
  npm run lint-staged
elif [ -d "CleanFix-frontend" ]; then
  # Estamos en el directorio padre (CleanFix-SummerCamp2025)
  cd CleanFix-frontend && npm run lint-staged
elif [ -d "../CleanFix-frontend" ]; then
  # Estamos en CleanFix (backend) - subir un nivel y entrar al frontend
  cd ../CleanFix-frontend && npm run lint-staged
else
  echo "⚠️  No se encontró el proyecto Angular. Verificar estructura de directorios."
  exit 1
fi  